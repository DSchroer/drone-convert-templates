---
steps:
  - name: {{choose name 'terraform-copy-output'}}
    image: hashicorp/terraform
    environment:
      GOOGLE_CREDENTIALS:
        from_secret: gcp_credentials
    commands:
      - DIR=$(pwd)
      - cd {{choose work_dir '.'}}
      - VARIABLE=$(terraform output -raw {{output}})
      - cd $DIR
      - echo $VARIABLE > {{file}}
